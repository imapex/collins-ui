
<div class="container-fluid">
  <div class="row">
    <div class="col-md-4">
      <div class="card-wrap">
        <div class="card">
          <div class="container">
            <h1> Add A New Job </h1>
            <hr>
            <div class="col-md-4">
              <form>
                <div class="form-group">
                  <div class="form-group row">
                    {{input type="text" class="form-control" value=name placeholder="Job Name" }}
                  </div>
                  <div class="form-group row">
                    {{input type="text" class="form-control" value=image placeholder="Image" }}
                  </div>
                  <div class="form-group row">
                    {{input type="text" class="form-control" value=queue placeholder="Site/Queue"}}
                  </div>
                  <div class="form-group row">
                    {{input type="text" class="form-control" value=every placeholder="e.g 1,3,5"}}
                  </div>
                  <div class="form-group row">
                    {{input type="text" class="form-control" value=period placeholder="e.g hours, minutes, seconds"}}
                  </div>
                  <!-- <button type="submit" class="btn btn-primary btn-lg">Submit</button> -->
                   <button class="btn btn-primary" {{action "createJob"}}>Create</button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

{{outlet}}
