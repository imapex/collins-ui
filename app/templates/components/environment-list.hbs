<div class="card">
  <div class="header">
    <div class="col-md-8">
      <h4 class="title">{{title}}</h4>
    </div>
    <div class="col-md-4">
      <!-- {{#link-to 'environments.add'}}<button class="btn btn-primary" type="button">Add Environment</button> {{/link-to}} -->
    </div>
  </div>
  <div class="content">
    <div class="table-responsive table-full-width">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          {{#each environments as |environment|}}
           {{#link-to "environments.show" environment tagName="tr"}}
              <td>{{environment.id}}</td>
              <td>{{environment.name}}</td>
              <td>{{environment.description}}</td>
            {{/link-to}}
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
