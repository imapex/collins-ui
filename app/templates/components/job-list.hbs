<div class="card">
  <div class="header">
    <h4 class="title">{{title}}</h4>
  </div>
  <div class="content">
    <div class="table-responsive table-full-width">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Status</th>
            <th>Site</th>
            <th>Last Result</th>
            <th>Name</th>
            <th>Type</th>
            <th>Image</th>
          </tr>
        </thead>
        <tbody>
          {{#each jobs as |job|}}
           {{#link-to "jobs.show" job tagName="tr"}}
              <td>{{job.id}}</td>
              <td>
                {{job-active-toggle job=job}}
              </td>
              <td>{{job.queue}}</td>
              <td>
                {{job-result-icon job=job}}
              </td>
              <td>{{job.name}}</td>
              <td>{{job.type}}</td>
              <td>{{job.image}}</td>
            {{/link-to}}
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
