<div class="card">
  <div class="header">
    <h4 class="title">{{title}}</h4>
  </div>
  <div class="content">
    <div class="table-responsive table-full-width">
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>ID</th>
            <th>Result</th>
            <th>Created</th>
          </tr>
        </thead>
        <tbody>
          {{#each results as |result|}}
           {{#link-to "results.show" result tagName="tr"}}
              <td>{{result.id}}</td>
              <td>{{result.result}}</td>
              <td>{{result.created}}</td>
            {{/link-to}}
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
